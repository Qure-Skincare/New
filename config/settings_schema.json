  {
    "name": "Order By - Receive By",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_order_by_receive_by",
        "label": "Show Order By - Receive By",
        "default": true
      },
      {
        "type": "text",
        "id": "today_text",
