<div class="{{ section.settings.classname }}">
    <div class="section_header text-center mb-3">
        {% if section.settings.heading != blank %}
            <h2 class="title-lg">{{ section.settings.heading }}</h2> 
        {% endif %}
    </div>
    {% if section.blocks.size > 0 %}
        <div class="sm_wrapper">
            <div class="swiper dot_pagination instagram_slider twa__swiper" id="twa__swiper-instagram_slider"
                data-section-id="instagram_slider" data-autoplay="false" data-loop="false" data-centerslide="false"
                data-mobile="2" data-tablet="5" data-desktop="5" data-spacing="10"
                data-arrowleft="instagram_slider-swiper-prev" data-arrowright="instagram_slider-swiper-next">
                <div class="swiper-wrapper">
                    {%- for block in section.blocks -%}
                        {% if block.type == 'object' %}
                            <div class="swiper-slide">
                                <div class="sm_item text-center">
                                    {% if block.settings.image != blank %}
                                        <img class="img-fluid insta_img" src="{{ block.settings.image | img_url: '450x' }}" alt="">
                                    {% endif %}
                                    
                                    <a href="{{ block.settings.button_url }}" class="insta_tag" target="_blank">
                                        {% if block.settings.image != blank %}
                                            <img src="{{ block.settings.image | img_url: '120x' }}" alt="">
                                        {% endif %}
                                        {{ block.settings.text }}
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="swiper-pagination"></div>
                {%- for block in section.blocks -%}
                    {% if block.type == 'button' %}
                        {% if block.settings.button_label != blank %}
                            <div class="btn-black">
                                <a href="{{ block.settings.button_url }}" class="btn m-0">{{ block.settings.button_label }}</a>
                            </div>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>


