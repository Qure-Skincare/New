<!-- --  truth about tap water start -- -->
<div class="truth_tap section">
    <div class="container">
        <div class="section_header text-md-center ">
            {% if section.settings.heading != blank %}
                <h2 class="title-lg">{{ section.settings.heading }}</h2> 
            {% endif %}

            {% if section.settings.text != blank %}
                {{ section.settings.text }}
            {% endif %}
        </div>

        <div class="progress_grid">
            {%- for block in section.blocks -%}
                <div class="progressInfo">
                    <div class="progressCont">
                        <p><span class="progressWrapper">
                                <span class="progessInfo text-dark">{{ block.settings.percent }}</span>
                                {{ block.settings.svg }}
                            </span>
                        </p>
                    </div>
                    <div>
                        <p class="tt_item_header">
                            <strong>{{ block.settings.heading }}</strong>
                        </p>
                        {{ block.settings.text }}
                    </div>
                </div>
            {%- endfor -%}
        </div>
    </div>
</div>
<!-- --  truth about tap water end -- -->

{% schema %}
    {
        "name": "Truth tap",
        "class": "section-truth-tap",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "t:common.heading.label"
            },
            {
                "type": "richtext",
                "id": "text",
                "label": "t:common.text.label"
            }
        ],
        "blocks": [
            {
                "type": "object",
                "name": "t:common.object.label",
                "limit": 4,
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "t:common.image.label"
                    },
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "t:common.heading.label"
                    },
                    {
                        "type": "html",
                        "id": "svg",
                        "label": "t:common.image.label"
                    },
                    {
                        "type": "text",
                        "id": "percent",
                        "label": "percent"
                    },
                    {
                        "type": "richtext",
                        "id": "text",
                        "label": "t:common.text.label"
                    }
                ]
		    }
        ]
    }
{% endschema %}