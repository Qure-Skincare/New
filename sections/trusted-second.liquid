<!-- -- trusted section start -- -->
<div class="anti_cream-trusted trusted_bl section pb-0 trustedVerified1">
    <div class="container">
        <div class="section_header text-start text-md-center mw-100 pb-0">
            {% if section.settings.heading != blank %}
                <h2 class="title-lg d-md-block d-none">{{ section.settings.heading | replace: '\n', '<br>' }}</h2>
                <h2 class="title-lg d-md-none d-block">{{ section.settings.heading | replace: '\n', '<br>' }}</h2>
            {% endif %}
        </div>
        {% if section.blocks.size > 0 %}
            <div class="trusted_wrapper pt-3 videosQure_dropdown faq">
                <div class="swiper dot_pagination trustedSwipper twa__swiper" id="twa__swiper-trustedSwipper"
                    data-section-id="trustedSwipper" data-autoplay="false" data-loop="false"
                    data-centerslide="false" data-mobile="1.3" data-tablet="3" data-desktop="4" data-spacing="20"
                    data-arrowleft="trustedSwipper-swiper-prev" data-arrowright="trustedSwipper-swiper-next">
                    <div class="swiper-wrapper">
                        {%- for block in section.blocks -%}
                            {% if block.type == 'wistia' %}
                                <div class="swiper-slide">
                                    <div class="">
                                        <div class="trust_img">
                                            {% if block.settings.image != blank %}
                                                <img src="{{ block.settings.image | img_url: '500x' }}" alt="video_{{ forloop.index }}" class="img-fluid">
                                            {% endif %}
                                            <div class="play_btn">
                                                <a class="popup-youtube">
                                                    <div class="wistia_responsive_padding" style="position:relative;">
                                                        <div class="wistia_responsive_wrapper"
                                                            style="height:100%;left:0;position:absolute;top:0;width:100%;">
                                                            <span
                                                                class="wistia_embed wistia_async_{{ block.settings.wistia_id }} popover=true videoFoam=true"
                                                                style="display:inline-block;height:100%;position:relative;width:100%">&nbsp;</span>
                                                        </div>
                                                        <span><img src="{{ 'trusted_play_md.svg' | asset_url }}" alt="">
                                                            <h6>Watch Review</h6>
                                                        </span>
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="trusted_doctor-info">
                                            {% if block.settings.heading != blank %}
                                                <h2>{{ block.settings.heading }}</h2>
                                            {% endif %}

                                            {% if block.settings.subheading != blank %}
                                                <p class="vQ_desc">{{ block.settings.subheading }}</p>
                                            {% endif %}

                                            {% if block.settings.text != blank %}
                                                <p class="vq_txt"></p>{{ block.settings.text }}</p>
                                            {% endif %}
                                        </div>
                                        {% if block.settings.likes != blank %}
                                            <div class="trusted_tag_sm">
                                                <img src="{{ 'trusted_play_esm.svg' | asset_url }}" alt="trusted">{{ block.settings.likes }} Subscribers
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            {% else %}
                                <div class="swiper-slide">
                                    <div class="">
                                        <div class="trust_img">
                                            {% if block.settings.image != blank %}
                                                <img src="{{ block.settings.image | img_url: '500x' }}" alt="video_{{ forloop.index }}" class="img-fluid">
                                            {% endif %}
                                            <div class="play_btn">
                                                {% if block.settings.video_url != blank %}
                                                    <a class="popup-youtube" href="{{ block.settings.video_url }}">
                                                        <span>
                                                            <img src="{{ 'trusted_play.svg' | asset_url }}" alt="" class="w-auto">
                                                            <h6>Watch Review</h6>
                                                        </span>
                                                    </a>   
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="trusted_doctor-info">
                                            {% if block.settings.heading != blank %}
                                                <h2>{{ block.settings.heading }}</h2>
                                            {% endif %}

                                            {% if block.settings.subheading != blank %}
                                                <p class="vQ_desc">{{ block.settings.subheading }}</p>
                                            {% endif %}

                                            {% if block.settings.text != blank %}
                                                <p class="vq_txt"></p>{{ block.settings.text }}</p>
                                            {% endif %}
                                        </div>
                                        {% if block.settings.likes != blank %}
                                            <div class="trusted_tag_sm">
                                                <img src="{{ 'trusted_play_esm.svg' | asset_url }}" alt="trusted">{{ block.settings.likes }} Subscribers
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endif %}
                        {%- endfor -%}
                    </div>
                    <div class="pagination_navigation">
                        <div class="swiper-pagination"></div>
                        <div class="trustedSwipper-swiper-prev swiper-button-prev swiper-button"></div>
                        <div class="trustedSwipper-swiper-next  swiper-button-next swiper-button"></div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>
<!-- -- trusted section end -- -->


{% if wistia_videos_count > 0 %}
    <script src="https://fast.wistia.com/assets/external/E-v1.js" async></script>
{% endif %}

