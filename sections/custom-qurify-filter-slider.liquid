<!-- --solution qurify start -- -->
<div class="solution_qurify section" id="benefits">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="sol_qurify_wrap">
                    <div class="section_header ps-0">
                        {% if section.settings.heading != blank %}
                            <h2 class="title-lg">{{ section.settings.heading }}</h2>
                        {% endif %}
            
                        {% if section.settings.text != blank %}
                            {{ section.settings.text }}
                        {% endif %}
                    </div>
                    <div class="d-none d-md-block">
                        {%- for block in section.blocks -%}
                            {% if block.type == 'object' %}
                                <div class="sol_q_item">
                                    {% if block.settings.image != blank %}
                                        <div class="s_q_img">
                                            <img src="{{ block.settings.image | img_url: '250x' }}" alt="">
                                        </div>
                                    {% endif %}
                                    <div class="s_q_info">
                                        <div class="s_q_title">{{ block.settings.heading }}</div>
                                        <div class="s_q_info">{{ block.settings.text }}</div>
                                    </div>
                                </div>
                            {% endif %}
                        {%- endfor -%}
                    </div>

                    <div class="faq d-block d-md-none">
                        <div class="accordion" id="accordionSolution">
                            {% assign f_object = 0 %}
                            {%- for block in section.blocks -%}
                                {% if block.type == 'object' %}
                                    {% assign f_object = f_object | plus: 1 %}
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSolution_{{ forloop.index }}" aria-expanded="false" aria-controls="collapseSolution_{{ forloop.index }}">
                                                <div class="container">
                                                    <div class="sol_q_item">
                                                        {% if block.settings.image != blank %}
                                                            <div class="s_q_img">
                                                                <img src="{{ block.settings.image | img_url: '250x' }}" alt="">
                                                            </div>
                                                        {% endif %}
                                                        <div class="s_q_title">{{ block.settings.heading }}</div>
                                                    </div>
                                                </div>
                                            </button>
                                        </h2>
                                        <div id="collapseSolution_{{ forloop.index }}" class="accordion-collapse collapse {% if f_object == 1  %}show{% endif %}" data-bs-parent="#accordionSolution">
                                            <div class="accordion-body">
                                                <div class="container">
                                                    <div class="s_q_info">{{ block.settings.text }}</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            {%- endfor -%}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="result_s mi_landing_result">
                    <div class="result_s_wrapper">
                        <div class="swiper dot_pagination result_slider1 twa__swiper"
                            id="twa__swiper-result_slider" data-section-id="result_slider" data-autoplay="false"
                            data-loop="false" data-centerslide="false" data-mobile="1.07" data-tablet="1.1"
                            data-desktop="1" data-spacing="10" data-arrowleft="result_slider-swiper-prev"
                            data-arrowright="result_slider-swiper-next">
                            <div class="swiper-wrapper">
                                {%- for block in section.blocks -%}
                                    {% if block.type == 'result' %}
                                        <div class="swiper-slide">
                                            <div class="result_item">
                                                {% if block.settings.image != blank %}
                                                    <div class="result_img_m">
                                                        <img src="{{ block.settings.image | img_url: '450x' }}" alt="{{ block.settings.image.alt | escape }}" class="img-fluid">
                                                    </div>
                                                {% endif %}

                                                <div class="result_c_info">
                                                    <div class="r_flag">
                                                        {% if block.settings.image_country != blank %}
                                                            <div class="flag_img">
                                                                <img src="{{ block.settings.image_country | img_url: '100x' }}" alt="" class="img-fluid">
                                                            </div>
                                                        {% endif %}
                                                        
                                                        <p class="r_c_name pe-2">{{ block.settings.client }}</p>
                                                    </div>
                                                    <div class="star_gp">
                                                        <img src="{{ 'results_star-full.svg' | asset_url }}" alt="">
                                                        {% if block.settings.heading != blank %}
                                                            <p>{{ block.settings.heading }}</p>
                                                        {% endif %}
                                                    </div>
                                                    <div class="reviewed">
                                                        <p>Reviewed in {{ block.settings.text_country |  default: 'United States' }}</p>
                                                    </div>
                                                    <div class="verified_img">
                                                        <img src="{{ 'verified.svg' | asset_url }}" alt="">
                                                        <p>{{ section.settings.text_verified_customer }}</p>
                                                    </div>
                                                </div>
                                                <div class="result_item_info">
                                                    <div class="result_content">
                                                        {% if block.settings.text != blank %}
                                                            {{ block.settings.text }}
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                {%- endfor -%}
                            </div>
                            <div class="swiper-pagination"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- --solution qurify end -- -->

